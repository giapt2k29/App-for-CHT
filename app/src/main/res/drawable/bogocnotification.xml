<!-- res/drawable/cardview_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Viền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu nền của CardView -->
            <stroke android:width="2dp" android:color="@color/black"/> <!-- Màu và độ dày của viền -->
            <corners android:radius="10dp"/> <!-- Độ bo tròn góc giống với CardView -->
        </shape>
    </item>
    <!-- Nền của CardView -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Màu nền của CardView -->
            <corners android:radius="20dp"/> <!-- Độ bo tròn góc giống với CardView -->
        </shape>
    </item>
</layer-list>
